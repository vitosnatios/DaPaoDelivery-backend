{
  "functions": {
    "api": {
      "handler": "src/app.handler",
      "memory": 256
    }
  },
  "routes": [
    {
      "src": "/api/([^/]+)(/.*)?",
      "dest": "/api$2"
    },
    {
      "src": "/server-status",
      "dest": "/server-status"
    },
    {
      "src": "/(.*)",
      "dest": "/api$1"
    }
  ]
}